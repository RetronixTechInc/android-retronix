<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <TextView
		android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:id="@+id/time"
	    android:textStyle="bold"
	    android:textSize="24dip"
	    android:layout_gravity="center"
	    android:textColor="#69c9ff"
	/>
    <LinearLayout
    	android:orientation="horizontal"
    	android:layout_width="match_parent"
		android:layout_height="fill_parent"
		android:id="@+id/content">
    <!-- EXTSD test video -->
    <LinearLayout
    	android:id="@+id/extsdlayout"
    	android:orientation="vertical"
    	android:layout_width="match_parent"
		android:layout_height="fill_parent">
	<TextView
		android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:id="@+id/extsdstr"
	    android:textStyle="bold"
	    android:textSize="24dip"
	    android:layout_gravity="center"
	    android:textColor="#FF0000"
	/>
    <TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/extsdlist"
		android:textStyle="bold"
		android:textSize="16dip"
		android:layout_marginLeft="10dip"
	/>
	<VideoView
		android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:id="@+id/videoview"
	    android:layout_marginTop="10dip"
	/>
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/playing_video"
		android:textStyle="bold"
		android:textSize="18dip"
		android:textColor="#FFFF88"
		android:layout_marginLeft="10dip"
	/>
	</LinearLayout>
	<!-- UDISK test photo -->
	<LinearLayout
		android:id="@+id/udisklayout"
    	android:orientation="vertical"
    	android:layout_width="match_parent"
		android:layout_height="fill_parent">
	<TextView
		android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:id="@+id/udiskstr"
	    android:textStyle="bold"
	    android:textSize="24dip"
	    android:layout_gravity="center"
	    android:textColor="#FF0000"
	/>
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/udisklist"
		android:textStyle="bold"
		android:textSize="16dip"
		android:layout_marginLeft="10dip"
	/>
	<ImageView
		android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:id="@+id/udiskimageview"
	    android:layout_gravity="center"
	    android:layout_marginTop="10dip"
	/>
	</LinearLayout>
	</LinearLayout>
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="fill_parent"
		android:id="@+id/ftpdownload"
		android:textStyle="bold"
		android:textSize="20dip"
		android:textColor="#FFC8C8"
	/>
</LinearLayout>