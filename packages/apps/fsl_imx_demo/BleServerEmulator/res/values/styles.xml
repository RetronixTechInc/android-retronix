<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- RadioButton.Style -->
    <style name="ButtonTabStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/btn_tab_text_selector</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!-- TextTitelHome -->
    <style name="TextTitelHome">
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <!-- TextContentHome -->
    <style name="TextContentHome">
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textColor">@color/text_dark_gray</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <!-- ImageViewHome -->
    <style name="ImageViewHome">
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@null</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!-- RelativeHomeContent -->
    <style name="RelativeHomeContent">
        <item name="android:background">@drawable/btn_grid_relative_selector</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- EditDataText -->
    <style name="EditDataText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/text_dark_gray</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- HorLine -->
    <style name="HorLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/text_gray</item>
    </style>

</resources>
